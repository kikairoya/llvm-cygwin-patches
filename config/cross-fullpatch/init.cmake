include("${CMAKE_CURRENT_LIST_DIR}/../cross-to-cygwin.cmake")
set(CLANG_DEFAULT_CXX_STDLIB "libc++" CACHE STRING "" FORCE)
set(CLANG_DEFAULT_LINKER "lld" CACHE STRING "" FORCE)
#set(CLANG_DEFAULT_RTLIB "libgcc" CACHE STRING "" FORCE)
#set(CLANG_DEFAULT_UNWINDLIB "libunwind" CACHE STRING "" FORCE)
set(LIBCXX_ENABLE_STATIC_ABI_LIBRARY ON CACHE STRING "" FORCE)
set(LIBCXX_INCLUDE_BENCHMARKS OFF CACHE STRING "" FORCE)
set(LIBCXXABI_ENABLE_STATIC_UNWINDER ON CACHE STRING "" FORCE)
set(LIBCXXABI_ENABLE_SHARED OFF CACHE STRING "" FORCE)
set(LIBUNWIND_ENABLE_SHARED OFF CACHE STRING "" FORCE)
set(LLD_DEFAULT_LD_LLD_IS_MINGW ON CACHE BOOL "" FORCE)
set(LLVM_ENABLE_BINDINGS OFF CACHE BOOL "" FORCE)
set(LLVM_ENABLE_LLD ON CACHE BOOL "" FORCE)
if ("${CMAKE_SOURCE_DIR}" MATCHES "runtimes")
  set(LLVM_ENABLE_PROJECTS "" CACHE STRING "" FORCE)
  set(LLVM_ENABLE_RUNTIMES "libcxx;libcxxabi;libunwind" CACHE STRING "" FORCE)
else()
  set(LLVM_ENABLE_PROJECTS "clang;lld" CACHE STRING "" FORCE)
  set(LLVM_ENABLE_RUNTIMES "" CACHE STRING "" FORCE)
endif()
set(LLVM_ENABLE_THREADS OFF CACHE STRING "Disable threading due to something unstable in cleanup routine" FORCE)
set(LLVM_INCLUDE_DOCS OFF CACHE BOOL "" FORCE)
set(LLVM_INCLUDE_EXAMPLES OFF CACHE BOOL "" FORCE)
set(LLVM_INCLUDE_TESTS OFF CACHE BOOL "" FORCE)
set(LLVM_INSTALL_UTILS ON CACHE BOOL "" FORCE)
set(LLVM_LINK_LLVM_DYLIB ON CACHE BOOL "" FORCE)
set(LLVM_TARGETS_TO_BUILD "host" CACHE STRING "" FORCE)
if (DEFINED ENV{PARALLEL_COMPILE_JOBS})
  set(LLVM_PARALLEL_COMPILE_JOBS "$ENV{PARALLEL_COMPILE_JOBS}" CACHE STRING "" FORCE)
endif()
if (DEFINED ENV{PARALLEL_LINK_JOBS})
  set(LLVM_PARALLEL_LINK_JOBS "$ENV{PARALLEL_LINK_JOBS}" CACHE STRING "" FORCE)
endif()
set(LLVM_FORCE_VC_REVISION "$ENV{BUILD_NAME}" CACHE STRING "" FORCE)
set(LLVM_FORCE_VC_REPOSITORY "llvm-cygwin" CACHE STRING "" FORCE)
